{

	"Format": "2.0.0",

	// Config //////////////////////////////////////////////////////////

	"ConfigSchema":{

		"PennyBalloonSched": {
			"AllowValues": "true, false",
			"Default": "true",
			"Description": "When disabled, Penny will not stop by her balloon every other Thursday."
		},

		"PennyBooksellerSched": {
			"AllowValues": "true, false",
			"Default": "true",
			"Description": "When disabled, Penny will not visit the Bookseller when he's in town on non-school days."
		},

		"CrossoverContent": {
			"AllowValues": "true, false",
			"Default": "true",
			"Description": "When disabled, crossover content with other mods will not occur. See mod page for list of crossover content."
		},

		"PennySaloonBreakfastSched": {
			"AllowValues": "true, false",
			"Default": "true",
			"Description": "When disabled and Part of a Saloon Breakfast is installed, Penny will not visit the Saloon for breakfast after completing that mod's questline."
		},
	},

	"DynamicTokens": [

		// Where Penny sleeps - vanilla
		{
			"Name": "PennyBed",
			"Value": "Trailer 4 9 1 penny_sleep",
			"When": {
				"HasMod |contains=kcspace.StarCrossed": false,
			},
		},
		// Where Penny sleeps - Star Crossed by kcspace
		{
			"Name": "PennyBed",
			"Value": "Trailer 4 9 1 penny_sleep",
			"When": {
				"HasMod |contains=kcspace.StarCrossed": true,
				"HasSeenEvent:hostPlayer |contains=ElliottPennyWedding": false,
			},
		},
		{
			"Name": "PennyBed",
			"Value": "ElliottHouse 12 4 1 penny_sleep",
			"When": {
				"HasMod |contains=kcspace.StarCrossed": true,
				"HasSeenEvent:hostPlayer |contains=ElliottPennyWedding": true,
			},
		},

		// How Penny spends her mornings - vanilla
		{
			"Name": "PennyMorning",
			"Value": "Town 35 89 2 penny_read",
			"When": {
				"HasMod |contains=agentlyoko.stardropbreakfast": false,
			},
		},
		// How Penny spends her mornings - Part of a Saloon Breakfast by AgentLyoko
		{
			"Name": "PennyMorning",
			"Value": "Town 35 89 2 penny_read",
			"When": {
				"HasMod |contains=agentlyoko.stardropbreakfast": true,
				"HasSeenEvent:hostPlayer |contains=177755": false,
			},
		},
		{
			"Name": "PennyMorning",
			"Value": "Town 35 89 2 penny_read",
			"When": {
				"HasMod |contains=agentlyoko.stardropbreakfast": true,
				"HasSeenEvent:hostPlayer |contains=177755": true,
				"PennySaloonBreakfastSched": false,
			},
		},
		{
			"Name": "PennyMorning",
			"Value": "Saloon 12 21 3",
			"When": {
				"HasMod |contains=agentlyoko.stardropbreakfast": true,
				"HasSeenEvent:hostPlayer |contains=177755": true,
				"PennySaloonBreakfastSched": true,
			},
		},

	],

